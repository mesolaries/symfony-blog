<!-- Categories Widget -->
<div class="card my-4">
    <h5 class="card-header">
        Categories
        {% if is_granted("ROLE_ADMIN") %}
            <a class="btn btn-sm btn-light float-right" href="{{ path('category.create') }}">
                <span class="fas fa-plus"></span>
            </a>
        {% endif %}
    </h5>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                {% for category in categories %}
                    {% if loop.index is odd %}
                        <li>
                            <a href="{{ path('category.show', {slug: category.slug}) }}">{{ category.name }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
                </ul>
            </div>
            <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                    {% for category in categories %}
                        {% if loop.index is even %}
                            <li>
                                <a href="{{ path('category.show', {slug: category.slug}) }}">{{ category.name }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>